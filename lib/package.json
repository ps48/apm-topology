{
  "name": "@opensearch/apm-topology",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/opensearch-project/apm-topology"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc && vite build --mode lib",
    "watch": "tsc && vite build --mode lib --watch",
    "clean": "rm -rf node_modules build dist",
    "clean:deep": "rm -rf node_modules package-lock.json build dist",
    "prepublishOnly": "npm run build && npm run test",
    "prepare": "husky install",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "test:update-snapshots": "vitest -u",
    "lint": "eslint \"src/**/*.{js,ts,jsx,tsx}\" --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{js,ts,jsx,tsx}\" --fix",
    "lint:staged": "lint-staged --verbose",
    "types:check": "tsc -p tsconfig.json",
    "prettier": "prettier --check --no-error-on-unmatched-pattern \"src/**/*.{js,ts,jsx,tsx,json,scss,sass,md}\"",
    "prettier:fix": "prettier --write --no-error-on-unmatched-pattern \"src/**/*.{js,ts,jsx,tsx,json,scss,sass,md}\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o build/storybook",
    "bundle:analyzer": "vite-bundle-visualizer -c vite.config.ts",
    "bundle:analyzer:network": "vite-bundle-visualizer -t network -c vite.config.ts",
    "bundle:analyzer:sunburst": "vite-bundle-visualizer -t sunburst -c vite.config.ts"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 --fix"
    ],
    "*.{md,json,yaml,yml,scss,sass}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.4",
    "@xyflow/react": "^12.4.4",
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.3.5",
    "@storybook/addon-actions": "^8.3.5",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-themes": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@tailwindcss/vite": "^4.0.17",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/node16": "^16.1.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.14",
    "@types/ramda": "^0.30.1",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/typescript-estree": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.2",
    "sass": "^1.77.8",
    "storybook-dark-mode": "^4.0.1",
    "tailwindcss": "^4.0.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5",
    "vite": "^5.1.0",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.2.1",
    "vite-plugin-lib-inject-css": "^1.3.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5",
    "vitest-canvas-mock": "^0.3.3"
  }
}