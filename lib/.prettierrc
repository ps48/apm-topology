{
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "jsxSingleQuote": false,
    "overrides": [
        {
            "files": [
                "*.json",
                "*.yaml",
                "*.yml"
            ],
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx",
                "*.scss",
                ".ts",
                ".tsx"
            ],
            "options": {
                "tabWidth": 4
            }
        }
    ],
    "printWidth": 120,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false
}